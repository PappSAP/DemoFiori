<mvc:View
    controllerName="demofiori.controller.Vista11"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>

    <Page title="Vista 11-Productos">
        <content>
                <VBox class="sapUiTinyMargin">
                    <List headerText="Productos" items ="{Products>/}" mode="SingleSelectMaster" itemPress="onPressProduct">
                        <StandardListItem title="{Products>Name}"  description="{Products>Description}" icon="{Products>PicUrl}" type="Active"/>
                    </List>
                </VBox>
        </content>
    </Page>
</mvc:View>
